---
import Experience from './Experience.astro';
import list from '../data/experiencelist.json'
---

<div class="grid grid-cols-1 md:grid-cols-12 my-4 mx-2 print:m-0 print:mt-4 print:grid-cols-7 print:text-sm text-sm">

  <ul class="list-none col-span-4">
    {list.filter(e => e.row === 1).map((exp) => (
      <Experience yr={exp.year} exp={exp.exp} />
    ))}
  </ul>

  <ul class="list-none col-span-3">
    {list.filter(e => e.row === 2).map((exp) => (
      <Experience yr={exp.year} exp={exp.exp} />
    ))}
  </ul>

s  <ul class="list-none col-span-3">
    {list.filter(e => e.row === 3).map((exp) => (
      <Experience yr={exp.year} exp={exp.exp} />
    ))}
  </ul>
    
</div>
